{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@app/*": [
                "./src/app/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@features/*": [
                "./src/features/*"
            ],
            "@utils/*": [
                "./src/utils/*"
            ],
            "@data/*": [
                "./src/data/*"
            ],
            "@hooks/*": [
                "./src/hooks/*"
            ],
            "@config/*": [
                "./src/config/*"
            ],
            "@routes/*": [
                "./src/app/routes/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}